{
  "presets": ["next/babel"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["."],
        "alias": {
          "@components": "./src/components",
          "@helpers": "./src/helpers",
          "@pages": "./src/pages",
          "@styles": "./src/styles",
          "~": "."
        }
      }
    ],
    [
      "styled-components",
      {
        "ssr": true
      }
    ],
    "inline-react-svg"
  ]
}
